<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <corners
        android:bottomLeftRadius="@dimen/qb_px_4"
        android:bottomRightRadius="@dimen/qb_px_4"
        android:topLeftRadius="@dimen/qb_px_4"
        android:topRightRadius="@dimen/qb_px_4" />


    <item android:state_pressed="false">
        <shape>
            <stroke
                android:width="0.5dp"
                android:color="@color/main_blue" />
            <!-- 背景色 -->
            <solid android:color="@color/beauty_color_white" />
        </shape>
    </item>


    <item android:state_pressed="true">
        <shape>
            <stroke
                android:width="0.5dp"
                android:color="@color/white" />
            <!-- 背景色 -->
            <solid android:color="@color/main_blue" />
        </shape>
    </item>



</selector>

