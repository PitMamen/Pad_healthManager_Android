<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/layout_tabs"
        android:layout_width="@dimen/qb_px_45"
        android:layout_height="match_parent"
        android:background="@color/home_blue"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/qb_px_50"
            android:background="#182152"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layout_top"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_top"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="联系人"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/img_top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/logo" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/layout_house"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_house"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="联系人"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/img_house"
                    android:layout_width="@dimen/qb_px_11"
                    android:layout_height="@dimen/qb_px_11"
                    android:scaleType="fitCenter"
                    android:src="@drawable/tab_icon_home" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/layout_cy"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_cy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="联系人"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/img_cy"
                    android:layout_width="@dimen/qb_px_11"
                    android:layout_height="@dimen/qb_px_11"
                    android:scaleType="fitCenter"
                    android:src="@drawable/tab_icon_cy" />
            </LinearLayout>

        </LinearLayout>


<!--        add-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/qb_px_33"
            android:layout_marginTop="@dimen/qb_px_22"
            android:gravity="center"
            android:background="@color/home_blue_dark"
            android:orientation="vertical"
            android:visibility="visible">

            <RelativeLayout
                android:id="@+id/layout_workbench"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_wkbench"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="我的待办"
                    android:layout_below="@+id/img_wkbench"
                    android:textColor="@color/white"
                    android:textSize="8sp"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/img_wkbench"
                    android:layout_width="@dimen/qb_px_15"
                    android:layout_height="@dimen/qb_px_15"
                    android:layout_centerInParent="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/tab_icon_gzt" />

            </RelativeLayout>

        </LinearLayout>

<!--        add-->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/qb_px_33"
            android:layout_marginTop="@dimen/qb_px_10"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <RelativeLayout
                android:id="@+id/layout_calendar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_calendar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="日程"
                    android:layout_below="@+id/img_calendar"
                    android:textColor="@color/white"
                    android:textSize="8sp"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/img_calendar"
                    android:layout_width="@dimen/qb_px_15"
                    android:layout_height="@dimen/qb_px_15"
                    android:layout_centerInParent="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/tab_icon_cy" />

            </RelativeLayout>

        </LinearLayout>





<!--        add-->












        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/qb_px_33"
            android:layout_marginTop="@dimen/qb_px_10"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/layout_person"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_person"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img_person"
                    android:gravity="center_horizontal"
                    android:text="患者报道"
                    android:textColor="@color/white"
                    android:textSize="8sp"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/img_person"
                    android:layout_width="@dimen/qb_px_15"
                    android:layout_height="@dimen/qb_px_15"
                    android:layout_centerInParent="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/tab_icon_jkgl" />

                <LinearLayout
                    android:id="@+id/layout_pot_health"
                    android:layout_width="@dimen/qb_px_11"
                    android:layout_height="@dimen/qb_px_11"
                    android:layout_marginLeft="@dimen/qb_px_27"
                    android:layout_marginTop="@dimen/qb_px_6"
                    android:background="@drawable/shape_boll_red"
                    android:gravity="center"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tv_new_count_health"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="@color/white"
                        android:textSize="@dimen/qb_px_7" />
                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/qb_px_33"
            android:layout_marginTop="@dimen/qb_px_10"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="visible">

            <RelativeLayout
                android:id="@+id/layout_group"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="咨询"
                    android:layout_below="@+id/img_group"
                    android:textColor="@color/white"
                    android:textSize="8sp"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/img_group"
                    android:layout_width="@dimen/qb_px_15"
                    android:layout_height="@dimen/qb_px_15"
                    android:layout_centerInParent="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/tab_icon_ct" />

                <LinearLayout
                    android:id="@+id/layout_pot_video"
                    android:layout_width="@dimen/qb_px_11"
                    android:layout_height="@dimen/qb_px_11"
                    android:layout_marginLeft="@dimen/qb_px_27"
                    android:layout_marginTop="@dimen/qb_px_6"
                    android:background="@drawable/shape_boll_red"
                    android:gravity="center"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tv_new_count_video"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="100"
                        android:textColor="@color/white"
                        android:textSize="@dimen/qb_px_6" />
                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/qb_px_33"
            android:layout_marginTop="@dimen/qb_px_10"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="visible">

            <RelativeLayout
                android:id="@+id/layout_send"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_send"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img_send"
                    android:gravity="center_horizontal"
                    android:text="预约"
                    android:textColor="@color/white"
                    android:textSize="8sp"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/img_send"
                    android:layout_width="@dimen/qb_px_12"
                    android:layout_height="@dimen/qb_px_12"
                    android:layout_centerInParent="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/tab_icon_gr" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/layout_of"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_of"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="联系人"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/img_of"
                    android:layout_width="@dimen/qb_px_11"
                    android:layout_height="@dimen/qb_px_11"
                    android:scaleType="fitCenter"
                    android:src="@drawable/tab_icon_send" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="invisible">

            <LinearLayout
                android:id="@+id/layout_chat"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_chat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="联系人"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/img_chat"
                    android:layout_width="@dimen/qb_px_11"
                    android:layout_height="@dimen/qb_px_11"
                    android:scaleType="fitCenter"
                    android:src="@drawable/tab_icon_message" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/qb_px_33"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layout_settings"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">



                <ImageView
                    android:id="@+id/img_settings"
                    android:layout_width="@dimen/qb_px_15"
                    android:layout_height="@dimen/qb_px_15"
                    android:scaleType="centerCrop"
                    android:src="@drawable/tab_icon_set" />

                <TextView
                    android:id="@+id/tv_settings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="个人中心"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:visibility="visible" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/qb_px_33"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="invisible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="消息"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:visibility="gone" />

                <ImageView
                    android:layout_width="@dimen/qb_px_2"
                    android:layout_height="wrap_content"
                    android:scaleType="fitCenter"
                    android:src="@drawable/tab_icon_set" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!--add-->
    <FrameLayout
        android:id="@+id/framelaout_workbench"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0"
        android:background="@color/white"
        android:orientation="vertical">
    </FrameLayout>




    <FrameLayout
        android:id="@+id/layout_fragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:background="@color/white"
        android:orientation="vertical">
    </FrameLayout>




    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:layout_width="@dimen/qb_px_1"
            android:layout_height="@dimen/qb_px_50"
            android:background="@color/transparent" />

        <View
            android:layout_width="@dimen/qb_px_1"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:background="@color/divider" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/layout_fragment_end"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="6"
        android:background="@color/white"
        android:orientation="vertical">

    </FrameLayout>






</LinearLayout>