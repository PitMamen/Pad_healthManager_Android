<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <RelativeLayout
        android:id="@+id/title_re"
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_35"
        android:background="@color/main_blue">


        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="@dimen/qb_px_20"
            android:layout_height="@dimen/qb_px_20"
            android:layout_centerVertical="true"
            android:src="@drawable/left_aco"
            android:visibility="invisible"></ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="确认咨询时间"
            android:textColor="@color/white"
            android:textSize="@dimen/qb_px_12"></TextView>

    </RelativeLayout>


    <TextView
        android:id="@+id/tv_pleasechoss"
        android:layout_below="@+id/title_re"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/qb_px_12"
        android:layout_marginTop="@dimen/qb_px_12"
        android:text="请选择一个时间段"></TextView>


    <LinearLayout
        android:id="@+id/ll_one"
        android:layout_below="@+id/tv_pleasechoss"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radio_time_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/qb_px_12"
            android:layout_marginTop="@dimen/qb_px_12"
            android:checked="true">

        </RadioButton>

        <TextView
            android:id="@+id/selecttime_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/qb_px_5"
            android:layout_marginTop="@dimen/qb_px_12"
            android:background="@drawable/shape_bg_blue_big"
            android:textColor="@drawable/textcolor_select"
            android:paddingHorizontal="@dimen/qb_px_10"
            android:paddingVertical="@dimen/qb_px_8"
            android:text="18:00-19:00"
            >

        </TextView>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_two"
        android:layout_below="@+id/ll_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radio_time_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/qb_px_12"
            android:layout_marginTop="@dimen/qb_px_12">

        </RadioButton>


        <TextView
            android:id="@+id/selecttime_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/qb_px_5"
            android:layout_marginTop="@dimen/qb_px_12"
            android:background="@drawable/shape_bg_blue_big"
            android:textColor="@drawable/textcolor_select"
            android:paddingHorizontal="@dimen/qb_px_10"
            android:paddingVertical="@dimen/qb_px_8"
            android:text="12:00-13:00"
           >

        </TextView>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_three"
        android:layout_below="@+id/ll_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radio_time_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/qb_px_12"
            android:layout_marginTop="@dimen/qb_px_12">

        </RadioButton>


        <TextView
            android:id="@+id/selecttime_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/qb_px_5"
            android:layout_marginTop="@dimen/qb_px_12"
            android:background="@drawable/shape_bg_blue_big"
            android:textColor="@drawable/textcolor_select"
            android:paddingHorizontal="@dimen/qb_px_10"
            android:paddingVertical="@dimen/qb_px_8"
            android:text="13:00-14:00"
           >

        </TextView>
    </LinearLayout>


    <TextView
        android:layout_below="@+id/ll_three"
        android:id="@+id/tv_confirm_time"
        android:layout_marginTop="@dimen/qb_px_80"
        android:text="确认"
        android:gravity="center"
        android:paddingVertical="@dimen/qb_px_8"
        android:paddingHorizontal="@dimen/qb_px_20"
        android:layout_marginStart="@dimen/qb_px_20"
        android:layout_marginEnd="@dimen/qb_px_20"
        android:background="@drawable/shape_bg_blue_big"
        android:textColor="@drawable/textcolor_select"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></TextView>


</RelativeLayout>