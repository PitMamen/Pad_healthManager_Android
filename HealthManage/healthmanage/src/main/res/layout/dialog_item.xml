<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/qb_px_180"
    android:layout_height="@dimen/qb_px_80"
    android:orientation="vertical"
    tools:ignore="MissingDefaultResource">



    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_bestnewmodify"
            android:visibility="gone"
            android:textColor="@color/home_blue"
            android:text="最新"
            android:layout_marginStart="@dimen/qb_px_1"
            android:layout_toLeftOf="@+id/tv_content_name"
            android:textSize="8sp"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>


        <TextView
            android:id="@+id/tv_content_name"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="问卷名称"
            android:textColor="@drawable/text_color_selector"
            android:background="@drawable/tv_bg_bacgrand"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </LinearLayout>






</LinearLayout>