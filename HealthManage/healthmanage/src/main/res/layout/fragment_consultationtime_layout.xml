<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_35">


        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="@dimen/qb_px_13"
            android:layout_height="@dimen/qb_px_13"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_fanhui"></ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="设置咨询时间"
            android:textColor="@color/black"
            android:textSize="@dimen/qb_px_12"></TextView>

    </RelativeLayout>
    <View
        android:id="@+id/ll_view"
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:background="#E6E6E6"></View>




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:text="患者期望时间"
            android:textColor="@color/beauty_color_gray"
            android:layout_marginTop="@dimen/qb_px_8"
            android:layout_marginStart="@dimen/qb_px_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>


        <TextView
            android:visibility="gone"
            android:id="@+id/tv_doc_confirmtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/qb_px_8"
            android:layout_marginEnd="@dimen/qb_px_35"
            android:text="医生确认时间"
            android:textColor="@color/beauty_color_gray">

        </TextView>



    </RelativeLayout>




    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/tv_expecttime"
            android:text="18:00-22:00"
            android:paddingHorizontal="@dimen/qb_px_12"
            android:paddingVertical="@dimen/qb_px_7"
            android:layout_marginTop="@dimen/qb_px_12"
            android:layout_marginStart="@dimen/qb_px_12"
            android:background="@drawable/shape_except_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>


        <TextView
            android:id="@+id/tv_doc_changetime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/qb_px_12"
            android:layout_marginEnd="@dimen/qb_px_20"
            android:background="@drawable/shape_except_time"
            android:paddingHorizontal="@dimen/qb_px_12"
            android:paddingVertical="@dimen/qb_px_7"
            android:text=""
            android:visibility="gone"></TextView>


    </RelativeLayout>











    <TextView
        android:text="咨询时间"
        android:layout_marginStart="@dimen/qb_px_12"
        android:layout_marginTop="@dimen/qb_px_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></TextView>



    <RelativeLayout
        android:id="@+id/re_settime_one"
        android:background="@drawable/shape_white_bac"
        android:layout_marginTop="@dimen/qb_px_15"
        android:layout_marginStart="@dimen/qb_px_12"
        android:layout_marginEnd="@dimen/qb_px_12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/time_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/qb_px_5"
            android:layout_marginTop="@dimen/qb_px_5"
            android:layout_marginBottom="@dimen/qb_px_5"
            android:text="设置时间1"></TextView>



        <TextView
            android:text="去设置"
            android:layout_centerVertical="true"
            android:drawableRight="@drawable/rigth_icon"
            android:layout_alignParentRight="true"
            android:layout_marginStart="@dimen/qb_px_5"
            android:layout_marginTop="@dimen/qb_px_5"
            android:layout_marginBottom="@dimen/qb_px_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>

    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/re_settime_two"
        android:background="@drawable/shape_white_bac"
        android:layout_marginTop="@dimen/qb_px_10"
        android:layout_marginStart="@dimen/qb_px_12"
        android:layout_marginEnd="@dimen/qb_px_12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/time_two"
            android:layout_centerVertical="true"
            android:text="设置时间2"
            android:layout_marginStart="@dimen/qb_px_5"
            android:layout_marginTop="@dimen/qb_px_5"
            android:layout_marginBottom="@dimen/qb_px_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>



        <TextView
            android:text="去设置"
            android:layout_centerVertical="true"
            android:drawableRight="@drawable/rigth_icon"
            android:layout_alignParentRight="true"
            android:layout_marginStart="@dimen/qb_px_5"
            android:layout_marginTop="@dimen/qb_px_5"
            android:layout_marginBottom="@dimen/qb_px_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/re_settime_three"
        android:background="@drawable/shape_white_bac"
        android:layout_marginTop="@dimen/qb_px_12"
        android:layout_marginStart="@dimen/qb_px_12"
        android:layout_marginEnd="@dimen/qb_px_12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/time_three"
            android:layout_centerVertical="true"
            android:text="设置时间3"
            android:layout_marginStart="@dimen/qb_px_5"
            android:layout_marginTop="@dimen/qb_px_5"
            android:layout_marginBottom="@dimen/qb_px_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>



        <TextView
            android:text="去设置"
            android:layout_centerVertical="true"
            android:drawableRight="@drawable/rigth_icon"
            android:layout_alignParentRight="true"
            android:layout_marginStart="@dimen/qb_px_5"
            android:layout_marginTop="@dimen/qb_px_5"
            android:layout_marginBottom="@dimen/qb_px_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>

    </RelativeLayout>



    <TextView
        android:text="温馨提示:"
        android:textSize="@dimen/qb_px_10"
        android:textColor="@color/beauty_color_gray"
        android:layout_marginTop="@dimen/qb_px_12"
        android:layout_marginStart="@dimen/qb_px_12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></TextView>



    <TextView
        android:text="1·您可以设置三个时间选项推荐给患者,患者可以在您提供的方案中选择,如患者未选择您推荐的时间选项,客服会介入帮您协调时间"
        android:textSize="@dimen/qb_px_8"
        android:textColor="@color/beauty_color_gray"
        android:layout_marginTop="@dimen/qb_px_10"
        android:layout_marginStart="@dimen/qb_px_12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></TextView>



    <TextView
        android:text="2·如您仅设置1个时间选项,系统将默认此时间为您的咨询时间"
        android:textSize="@dimen/qb_px_8"
        android:textColor="@color/beauty_color_gray"
        android:layout_marginTop="@dimen/qb_px_5"
        android:layout_marginStart="@dimen/qb_px_12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></TextView>





    <TextView
        android:id="@+id/tv_btnconfirm"
        android:layout_marginTop="@dimen/qb_px_5"
        android:text="确认"
        android:gravity="center"
        android:paddingVertical="@dimen/qb_px_8"
        android:paddingHorizontal="@dimen/qb_px_20"
        android:layout_marginStart="@dimen/qb_px_20"
        android:layout_marginEnd="@dimen/qb_px_20"
        android:background="@drawable/shape_bg_blue_big"
        android:textColor="@drawable/textcolor_select"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></TextView>





</LinearLayout>