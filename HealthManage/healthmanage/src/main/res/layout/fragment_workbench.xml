<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/beauty_color_bacg">


    <RelativeLayout
        android:id="@+id/re_docimformation"
        android:layout_width="@dimen/qb_px_300"
        android:layout_height="@dimen/qb_px_80"
        android:layout_marginLeft="@dimen/qb_px_11"
        android:layout_marginTop="@dimen/qb_px_11"
        android:background="@drawable/shape_bg_whitetwo">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/iv_docicon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/qb_px_11"
                android:layout_marginTop="@dimen/qb_px_11"
                android:src="@drawable/default_head_img"></ImageView>


            <TextView
                android:id="@+id/tv_docname_work"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/qb_px_10"
                android:layout_marginTop="@dimen/qb_px_20"
                android:layout_toRightOf="@+id/iv_docicon"
                android:text="王医生"
                android:textColor="@color/beauty_color_black"
                android:textSize="12sp"
                android:textStyle="bold"></TextView>


            <TextView
                android:id="@+id/tv_post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/qb_px_24"
                android:layout_toRightOf="@+id/tv_docname_work"
                android:paddingLeft="@dimen/qb_px_6"
                android:text="主任医生"
                android:textColor="@color/beauty_color_unblack"
                android:textSize="8sp">

            </TextView>


            <TextView
                android:id="@+id/tv_by_hosiptolname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_docname_work"
                android:layout_marginLeft="@dimen/qb_px_10"
                android:layout_toRightOf="@+id/iv_docicon"
                android:paddingTop="@dimen/qb_px_3"
                android:text="湘雅二医院-心血管内科"
                android:textColor="@color/beauty_color_gray_text"
                android:textSize="8sp"></TextView>


            <TextView
                android:id="@+id/tv_doctip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_by_hosiptolname"
                android:layout_marginLeft="@dimen/qb_px_10"
                android:layout_toRightOf="@+id/iv_docicon"
                android:paddingTop="@dimen/qb_px_3"
                android:text="中南大学湘雅二医院湘雅名医"
                android:textColor="@color/beauty_color_gray_text"
                android:textSize="8sp">

            </TextView>


            <View
                android:id="@+id/view_division"
                android:layout_width="0.1dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/qb_px_13"
                android:layout_marginBottom="@dimen/qb_px_13"
                android:background="@color/beauty_color_pale">

            </View>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/qb_px_10"
                android:layout_toRightOf="@+id/view_division"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_appointmentnum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/qb_px_24"
                        android:text="3547"
                        android:textColor="@color/beauty_color_bluedark"
                        android:textSize="13sp"></TextView>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/qb_px_5"
                        android:text="预约量"
                        android:textColor="@color/beauty_color_nomoal"
                        android:textSize="10sp"></TextView>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/tv_diagnosisnum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/qb_px_35"
                        android:layout_marginTop="@dimen/qb_px_24"
                        android:text="7921"
                        android:textColor="@color/beauty_color_orange"
                        android:textSize="13sp"></TextView>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/qb_px_35"
                        android:paddingTop="@dimen/qb_px_5"
                        android:text="诊疗量"
                        android:textColor="@color/beauty_color_nomoal"
                        android:textSize="10sp"></TextView>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/tv_startnumn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/qb_px_35"
                        android:layout_marginTop="@dimen/qb_px_24"
                        android:text="7921"
                        android:textColor="@color/beauty_color_cyan"
                        android:textSize="13sp"></TextView>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/qb_px_35"
                        android:paddingTop="@dimen/qb_px_5"
                        android:text="患者量"
                        android:textColor="@color/beauty_color_nomoal"
                        android:textSize="10sp"></TextView>


                </LinearLayout>


            </LinearLayout>
        </RelativeLayout>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="@dimen/qb_px_300"
        android:layout_height="wrap_content"
        android:layout_below="@+id/re_docimformation"
        android:layout_marginLeft="@dimen/qb_px_11"
        android:layout_marginTop="@dimen/qb_px_11"
        android:background="@drawable/shape_bg_whitetwo"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/ll_jzzt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_danzhenliebiao"
                android:layout_width="@dimen/qb_px_38"
                android:layout_height="@dimen/qb_px_10"
                android:layout_marginLeft="@dimen/qb_px_10"
                android:layout_marginTop="@dimen/qb_px_13"
                android:text="待诊列表"
                android:textColor="@color/beauty_color_black"
                android:textSize="9sp"
                android:textStyle="bold"></TextView>


            <TextView
                android:id="@+id/tv_ckgd"
                android:layout_width="@dimen/qb_px_38"
                android:layout_height="@dimen/qb_px_10"
                android:layout_marginLeft="@dimen/qb_px_60"
                android:layout_marginTop="@dimen/qb_px_13"
                android:text="待诊列表"
                android:textColor="@color/beauty_color_gray"
                android:textSize="7sp"></TextView>


            <TextView
                android:id="@+id/tv_zzjzz"
                android:layout_width="@dimen/qb_px_38"
                android:layout_height="@dimen/qb_px_10"
                android:layout_marginLeft="@dimen/qb_px_20"
                android:layout_marginTop="@dimen/qb_px_13"
                android:text="正在就诊中"
                android:textColor="@color/beauty_color_black"
                android:textSize="9sp"
                android:textStyle="bold"></TextView>


            <TextView
                android:id="@+id/tv_ckgd_more"
                android:layout_width="@dimen/qb_px_38"
                android:layout_height="@dimen/qb_px_10"
                android:layout_marginLeft="@dimen/qb_px_40"
                android:layout_marginTop="@dimen/qb_px_13"
                android:layout_marginEnd="@dimen/qb_px_13"
                android:text="查看更多"
                android:textColor="@color/beauty_color_gray"
                android:textSize="7sp"></TextView>

        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="@dimen/qb_px_13"
            android:id="@+id/rl_left"
            android:layout_width="@dimen/qb_px_180"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/list_tobeseen"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/qb_px_11"
                android:paddingTop="@dimen/qb_px_20">

            </androidx.recyclerview.widget.RecyclerView>


        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_temp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/qb_px_13"
            android:layout_width="@dimen/qb_px_180"
            android:layout_height="@dimen/qb_px_130">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/list_zzjz"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/qb_px_25"
                android:paddingTop="@dimen/qb_px_20"
                android:visibility="visible">

            </androidx.recyclerview.widget.RecyclerView>


        </RelativeLayout>



        <RelativeLayout
            android:id="@+id/rl_dai"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_below="@+id/rl_temp"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="@dimen/qb_px_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/tv_dsflb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/qb_px_104"
                android:text="待随访列表"
                android:textColor="@color/beauty_color_black"
                android:textSize="10sp"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/tv_dsfckgd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/qb_px_90"
                android:layout_marginEnd="@dimen/qb_px_10"
                android:text="查看更多"
                android:textColor="@color/beauty_color_gray"
                android:textSize="7sp"></TextView>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_dai">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rl_wait_list"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="@dimen/qb_px_15"
                android:layout_marginEnd="@dimen/qb_px_25"></androidx.recyclerview.widget.RecyclerView>
        </RelativeLayout>




    </RelativeLayout>






<!--    图表UI-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/qb_px_10"
        android:layout_toRightOf="@+id/re_docimformation"
        android:orientation="vertical">


        <!--        折现图-->
        <lecho.lib.hellocharts.view.LineChartView
            android:id="@+id/lvc_main"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:transitionName="line" />


        <!--        饼图-->

        <lecho.lib.hellocharts.view.PieChartView
            android:id="@+id/pcv_main"
            android:layout_width="@dimen/qb_px_120"
            android:layout_height="@dimen/qb_px_100"
            android:layout_gravity="center"
            android:transitionName="pie" />


<!--        柱形图-->

        <lecho.lib.hellocharts.view.ComboLineColumnChartView
            android:id="@+id/clccv_main"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:transitionName="combo_line_column" />




    </LinearLayout>












</RelativeLayout>