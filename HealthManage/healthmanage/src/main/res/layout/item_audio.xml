<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/qb_px_5">

    <LinearLayout
        android:id="@+id/audio_view"
        android:layout_width="@dimen/qb_px_50"
        android:layout_height="@dimen/qb_px_20"
        android:background="@drawable/shape_bg_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/audio_play_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/qb_px_5"
            android:layout_marginRight="@dimen/qb_px_2"
            android:scaleType="centerCrop"
            android:src="@drawable/voice_msg_playing_3" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_duration"
        android:layout_width="@dimen/qb_px_40"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/qb_px_5"
        android:text="6&quot;"
        android:textSize="@dimen/qb_px_8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/audio_view"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_delete"
        android:layout_width="@dimen/qb_px_9"
        android:layout_height="@dimen/qb_px_9"
        android:layout_marginLeft="@dimen/qb_px_8"
        android:scaleType="centerCrop"

        android:src="@drawable/delete_item"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>