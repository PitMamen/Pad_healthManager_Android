<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >


  <TextView
      android:id="@+id/tv_right_name"
      android:text="套餐名称"
      android:textSize="15sp"
      android:layout_marginStart="@dimen/qb_px_15"
      android:textColor="@color/text_black"
      android:layout_marginTop="@dimen/qb_px_5"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">

  </TextView>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/tv_time"
            android:textColor="@color/text_color_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/qb_px_15"
            android:layout_marginTop="@dimen/qb_px_8"
            android:text="时间"
            android:textSize="12sp">

        </TextView>



        <TextView
            android:id="@+id/tv_status"
            android:text="完成"
            android:layout_alignParentRight="true"
            android:textColor="@color/beauty_color_blue"
            android:layout_marginEnd="@dimen/qb_px_15"
            android:layout_marginTop="@dimen/qb_px_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>

    </RelativeLayout>

    <View
        android:id="@+id/ll_view"
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:layout_marginTop="@dimen/qb_px_3"
        android:layout_below="@+id/tv_dialog_title"
        android:background="#E6E6E6"></View>









</LinearLayout>