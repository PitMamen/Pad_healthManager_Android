<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_mr_detail_zlfa_cfxx_zhongchengyao"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="0dp"
    android:layout_marginRight="0dp"
    android:background="@android:color/transparent">

    <!-- 中成药 处方 -->
    <LinearLayout
        android:id="@+id/ll_cfxx_xiyao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_xiyao_ywmc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            tools:text="药物名称"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/qb_px_14" />

        <TextView
            android:id="@+id/tv_xiyao_jxmc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            tools:text="剂型名称"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/qb_px_14" />

        <TextView
            android:id="@+id/tv_xiyao_ypgg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            tools:text="药品规格"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/qb_px_14" />

        <TextView
            android:id="@+id/tv_xiyao_ypsl_ypdw"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            tools:text="发药数量 + 发药数量单位"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/qb_px_14" />

        <TextView
            android:id="@+id/tv_xiyao_ypyf"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            tools:text="药品用法"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/qb_px_14" />

        <TextView
            android:id="@+id/tv_xiyao_mcsyjl"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            tools:text="【每次使用剂量】【每次使用剂量单位】"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/qb_px_14" />

        <TextView
            android:id="@+id/tv_xiyao_mcsysl"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            tools:text="【每次使用数量】【每次使用数量单位】"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/qb_px_14" />

        <TextView
            android:id="@+id/tv_xiyao_yypc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            tools:text="用药频次"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/qb_px_14" />

        <TextView
            android:id="@+id/tv_xiyao_yyts"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            tools:text="用药天数"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/qb_px_14" />
    </LinearLayout>

</LinearLayout>
