<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_mr_detail_zlfa_cfxx_zhongchengyao_title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="@dimen/qb_px_9"
    android:layout_marginRight="0dp"
    android:background="@color/color_1a4fa4e9">

    <!-- 中成药 处方 -->
    <LinearLayout
        android:id="@+id/ll_cfxx_xiyao_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text="药物名称"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/qb_px_14" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text="剂型名称"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/qb_px_14" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text="药品规格"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/qb_px_14" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text="发药数量"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/qb_px_14" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text="药品用法"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/qb_px_14" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text="每次剂量"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/qb_px_14" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text="每次数量"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/qb_px_14" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text="用药频次"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/qb_px_14" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text="用药天数"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/qb_px_14" />
    </LinearLayout>

</FrameLayout>
