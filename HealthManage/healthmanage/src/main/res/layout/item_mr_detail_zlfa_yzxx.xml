<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_mr_detail_zlfa_yzxx"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="0dp"
    android:layout_marginRight="0dp"
    android:background="@android:color/transparent">

    <!-- 用药(用药的数据从医嘱信息中取) -->
    <LinearLayout
        android:id="@+id/ll_yzxx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible">
        <TextView
            android:id="@+id/tv_ywmc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:text="【医嘱明细名称】"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/qb_px_8" />

        <TextView
            android:id="@+id/tv_ypgg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text="【药品规格】"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/qb_px_8" />

        <TextView
            android:id="@+id/tv_ypsl_ypdw"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            tools:text="发药数量 + 发药数量单位"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/qb_px_8" />

        <TextView
            android:id="@+id/tv_ypyf"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text="药品用法"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/qb_px_8" />

        <TextView
            android:id="@+id/tv_mcsyjl"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            tools:text="【每次使用剂量】【每次使用剂量单位】"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/qb_px_8" />

        <TextView
            android:id="@+id/tv_mcsysl"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            tools:text="【每次使用数量】【每次使用数量单位】"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/qb_px_8" />

        <TextView
            android:id="@+id/tv_yypd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text="用药频度"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/qb_px_8" />

        <TextView
            android:id="@+id/tv_yyts"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text="用药天数"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/qb_px_8" />


    </LinearLayout>

</LinearLayout>
