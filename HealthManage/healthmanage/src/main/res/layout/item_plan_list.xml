        android:layout_marginRight="@dimen/qb_px_40"
        android:background="@color/bg_gray_light_two" />


    <TextView
        android:layout_centerVertical="true"
        android:id="@+id/tv_bone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:layout_marginEnd="@dimen/qb_px_15"
        android:layout_alignParentRight="true"
        android:textColor="@color/main_blue_"
        android:textSize="12sp" />

    <TextView
        android:layout_marginEnd="@dimen/qb_px_5"
        android:layout_centerVertical="true"
        android:layout_below="@+id/tv_bone_number"
        android:layout_alignParentRight="true"
        android:id="@+id/tv_bone_number_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="个案数量"
        android:textColor="@color/text_desc_dark"
        android:textSize="11sp" />




