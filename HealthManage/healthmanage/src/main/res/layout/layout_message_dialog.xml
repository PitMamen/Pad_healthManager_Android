<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/qb_px_12"
        android:paddingLeft="@dimen/qb_px_16"
        android:text="提示"
        android:paddingTop="@dimen/qb_px_16"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/txt_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/qb_px_12"
        android:text="退出当前账户?"
        android:layout_marginTop="@dimen/qb_px_16"
        android:layout_marginLeft="@dimen/qb_px_16"
        android:layout_marginRight="@dimen/qb_px_16"
        android:textColor="@color/black"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/qb_px_12"
        android:gravity="right">

        <TextView
           android:id="@+id/txt_negative"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:gravity="center"
           android:text="取消"
           android:paddingTop="@dimen/qb_px_16"
           android:paddingBottom="@dimen/qb_px_16"
           android:paddingLeft="@dimen/qb_px_18"
           android:paddingRight="@dimen/qb_px_18"
           android:textColor="@color/text_desc_dark"
            android:textSize="@dimen/qb_px_12"/>

        <TextView
            android:id="@+id/txt_positive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/main_blue"
            android:paddingTop="@dimen/qb_px_16"
            android:paddingBottom="@dimen/qb_px_16"
            android:paddingLeft="@dimen/qb_px_18"
            android:paddingRight="@dimen/qb_px_18"
            android:textSize="@dimen/qb_px_12"/>

    </LinearLayout>

</LinearLayout>