<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:paddingHorizontal="@dimen/qb_px_10"
    android:paddingVertical="@dimen/dp_40"
    android:background="@color/beauty_color_bacg"
    android:gravity="center_vertical"
    android:layout_height="@dimen/qb_px_110">

    <Button
        android:id="@+id/tv_send_end"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/qb_px_23"
        android:paddingHorizontal="@dimen/qb_px_20"
        android:background="@drawable/shape_btn_gray_ligt"
        android:text="结束计划"
        android:textColor="@color/text_black" />
    <Button
        android:id="@+id/tv_send_jktx"
        android:layout_width="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_height="@dimen/qb_px_23"
        android:paddingHorizontal="@dimen/qb_px_20"
        android:background="@drawable/shape_btn_blue_dark"
        android:text="健康提醒"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/tv_send_jkpg"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/qb_px_23"
        android:paddingHorizontal="@dimen/qb_px_20"
        android:background="@drawable/shape_btn_blue_dark"
        android:text="健康评估"
        android:textColor="@color/white" />

</RelativeLayout>