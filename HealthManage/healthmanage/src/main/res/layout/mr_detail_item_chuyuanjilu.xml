<?xml version="1.0" encoding="utf-8"?>
<!-- 临床表现-详情 -->
<!-- 下面的ScrollView 和 LinearLayout 必须在一起使用，都是为了内容超出屏幕后能滚动-->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/qb_px_20"
    android:layout_marginRight="@dimen/qb_px_20"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/qb_px_10"
        android:orientation="vertical">
        <com.bitvalue.health.util.layout.IndicatorView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:textxxx="入院情况"/>

        <TextView
            android:id="@+id/tv_cyjl_ryzztz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/qb_px_9"
            tools:text="【入院时主要症状及体征】"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/qb_px_8" />

        <TextView
            android:id="@+id/tv_cyjl_hbz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/qb_px_9"
            tools:text="【合并症】"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/qb_px_8"
            android:visibility="gone"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/qb_px_15"
        android:orientation="vertical">
        <com.bitvalue.health.util.layout.IndicatorView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:textxxx="入院诊断"/>

        <TextView
            android:id="@+id/tv_cyjl_ryzd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/qb_px_9"
            tools:text="【入院诊断】"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/qb_px_8" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/qb_px_15"
        android:orientation="vertical">
        <com.bitvalue.health.util.layout.IndicatorView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:textxxx="诊疗过程"/>

        <TextView
            android:id="@+id/tv_cyjl_zlgc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/qb_px_9"
            android:textColor="@color/black_333333"
            tools:text="【诊疗过程】"
            android:textSize="@dimen/qb_px_8"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/qb_px_15"
        android:orientation="vertical">
        <com.bitvalue.health.util.layout.IndicatorView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:textxxx="出院诊断"/>

        <TextView
            android:id="@+id/tv_cyjl_cyzd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/qb_px_9"
            tools:text="【出院时症状与体征】，【出院诊断】"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/qb_px_8" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/qb_px_15"
        android:orientation="vertical">
        <com.bitvalue.health.util.layout.IndicatorView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:textxxx="出院情况"/>

        <TextView
            android:id="@+id/tv_cyjl_cyqk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/qb_px_9"
            android:textColor="@color/black_333333"
            tools:text="【出院时情况】"
            android:textSize="@dimen/qb_px_8"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/qb_px_15"
        android:orientation="vertical">
        <com.bitvalue.health.util.layout.IndicatorView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:textxxx="出院医嘱"/>

        <TextView
            android:id="@+id/tv_cyjl_cyyz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/qb_px_9"
            android:textColor="@color/black_333333"
            tools:text="【出院医嘱】"
            android:textSize="@dimen/qb_px_8"/>
    </LinearLayout>

</LinearLayout>
</ScrollView>