<?xml version="1.0" encoding="utf-8"?><!-- 患病历史 -->
<!-- 下面的ScrollView 和 LinearLayout 必须在一起使用，都是为了内容超出屏幕后能滚动-->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/qb_px_20"
        android:layout_marginRight="@dimen/qb_px_20"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/qb_px_10"
            android:orientation="vertical">

            <com.bitvalue.health.util.layout.IndicatorView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:textxxx="现病史" />

            <TextView
                android:id="@+id/tv_xbs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/qb_px_9"
                android:lineSpacingMultiplier="1.3"
                android:textColor="@color/black_333333"
                android:textSize="@dimen/qb_px_8"
                tools:text="该患于14小时前被车撞伤左肩，活动受限。于职工医院就诊，X线检查示：左肱骨外科颈骨折。未治疗，来我院就诊。伤后无呼吸困难，无意识障碍，无发热。" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/qb_px_15"
            android:orientation="vertical">

            <com.bitvalue.health.util.layout.IndicatorView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:textxxx="既往史" />

            <TextView
                android:id="@+id/tv_jws"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/qb_px_9"
                android:lineSpacingMultiplier="1.3"
                android:textColor="@color/black_333333"
                android:textSize="@dimen/qb_px_8"
                tools:text="否认高血压和糖尿病病史。否认肝炎，结核等传染病史。否认手术，外伤及输血史。预防接种史不详。" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/qb_px_15"
            android:orientation="vertical">

            <com.bitvalue.health.util.layout.IndicatorView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:textxxx="个人史" />

            <TextView
                android:id="@+id/tv_grs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/qb_px_9"
                android:lineSpacingMultiplier="1.3"
                android:text="不详"
                android:textColor="@color/black_333333"
                android:textSize="@dimen/qb_px_8" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/qb_px_15"
            android:orientation="vertical">

            <com.bitvalue.health.util.layout.IndicatorView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:textxxx="家族史" />

            <TextView
                android:id="@+id/tv_jzs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/qb_px_9"
                android:lineSpacingMultiplier="1.3"
                android:text="不详"
                android:textColor="@color/black_333333"
                android:textSize="@dimen/qb_px_8" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/qb_px_15"
            android:orientation="vertical">

            <com.bitvalue.health.util.layout.IndicatorView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:textxxx="过敏史" />

            <TextView
                android:id="@+id/tv_gms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/qb_px_9"
                android:lineSpacingMultiplier="1.3"
                android:text="无"
                android:textColor="@color/black_333333"
                android:textSize="@dimen/qb_px_8" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/qb_px_15"
            android:orientation="vertical">

            <com.bitvalue.health.util.layout.IndicatorView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:textxxx="婚姻史" />

            <TextView
                android:id="@+id/tv_hys"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/qb_px_9"
                android:lineSpacingMultiplier="1.3"
                android:text="无"
                android:textColor="@color/black_333333"
                android:textSize="@dimen/qb_px_8" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>