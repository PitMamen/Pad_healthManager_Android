<?xml version="1.0" encoding="utf-8"?>
<!-- 临床表现-门诊 -->
<!-- 下面的ScrollView 和 LinearLayout 必须在一起使用，都是为了内容超出屏幕后能滚动-->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/qb_px_20"
    android:layout_marginRight="@dimen/qb_px_20"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/qb_px_10"
        android:orientation="vertical">
        <com.bitvalue.health.util.layout.IndicatorView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:textxxx="主诉&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;"/>

        <TextView
            android:id="@+id/tv_zs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/qb_px_9"
            android:textColor="@color/black_333333"
            android:lineSpacingMultiplier="1.3"
            android:text="左肩疼痛，活动受限约14小时"
            android:textSize="@dimen/qb_px_8"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/qb_px_10"
        android:orientation="vertical">
        <com.bitvalue.health.util.layout.IndicatorView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:textxxx="症状描述"/>

        <TextView
            android:id="@+id/tv_zzms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/qb_px_9"
            android:textColor="@color/black_333333"
            android:lineSpacingMultiplier="1.3"
            android:text="左肩肿胀，皮下瘀斑存在，压痛阳性，叩击痛阳性。左小腿上段外侧压痛阳性。"
            android:textSize="@dimen/qb_px_8"/>
    </LinearLayout>

</LinearLayout>
</ScrollView>