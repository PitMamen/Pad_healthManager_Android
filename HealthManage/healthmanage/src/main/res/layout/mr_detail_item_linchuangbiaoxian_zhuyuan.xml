<?xml version="1.0" encoding="utf-8"?>
<!-- 临床表现-详情 -->
<!-- 下面的ScrollView 和 LinearLayout 必须在一起使用，都是为了内容超出屏幕后能滚动-->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/qb_px_20"
    android:layout_marginRight="@dimen/qb_px_20"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/qb_px_10"
        android:orientation="vertical">
        <com.bitvalue.health.util.layout.IndicatorView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:textxxx="主诉及症状描述"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/qb_px_9"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_ryzztz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black_333333"
                android:lineSpacingMultiplier="1.3"
                android:text="【入院时主要症状及体征】"
                android:textSize="@dimen/qb_px_8"/>
            <TextView
                android:id="@+id/tv_hbz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black_333333"
                android:lineSpacingMultiplier="1.3"
                android:text="【合并症】"
                android:textSize="@dimen/qb_px_8"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
</ScrollView>