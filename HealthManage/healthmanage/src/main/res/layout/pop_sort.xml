<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/qb_px_200"
    android:padding="@dimen/qb_px_10"
    android:background="@color/bga_pp_eighteen_maskColor"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_sort_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:drawablePadding="@dimen/qb_px_5"
        android:text="按创建时间排序"
        android:textColor="@color/white" />

    <View
        android:layout_marginTop="@dimen/qb_px_5"
        android:layout_width="match_parent"
        android:background="@color/divider"
        android:layout_height="1dp"/>

    <TextView
        android:id="@+id/tv_sort_num"
        android:layout_marginTop="@dimen/qb_px_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:drawablePadding="@dimen/qb_px_5"
        android:text="按使用人数排序"
        android:textColor="@color/white" />

</LinearLayout>