<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <include layout="@layout/layout_third_title"/>



    <View
        android:id="@+id/ll_view"
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:background="#E6E6E6"></View>



    <RelativeLayout
        android:visibility="visible"
        android:id="@+id/rl_commonlyuselayout"
        android:layout_marginStart="@dimen/qb_px_10"
        android:layout_below="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_custom_reply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/qb_px_1"
            android:text="自定义快捷用语"
            android:textColor="@color/blue_one"
            android:textSize="13sp">

        </TextView>


    </RelativeLayout>


    <com.bitvalue.health.util.customview.WrapRecyclerView
        android:id="@+id/list_quickreply"
        android:layout_below="@+id/rl_commonlyuselayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/qb_px_3"
       />




</LinearLayout>