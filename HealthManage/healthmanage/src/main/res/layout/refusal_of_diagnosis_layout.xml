<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/shape_white_bg_">


    <TextView
        android:id="@+id/tv_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/qb_px_12"
        android:text="提示"
        android:textColor="@color/text_black"
        android:textSize="15sp"></TextView>

    <View
        android:id="@+id/ll_view"
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:layout_below="@+id/tv_dialog_title"
        android:layout_marginTop="@dimen/qb_px_8"
        android:background="#E6E6E6"></View>


    <TextView
        android:id="@+id/tv_seletc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_view"
        android:layout_marginStart="@dimen/qb_px_12"
        android:layout_marginTop="@dimen/qb_px_10"
        android:text="请选择拒诊理由"></TextView>

    <LinearLayout
        android:id="@+id/ll_ii"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/qb_px_15"
        android:layout_below="@+id/tv_seletc"
        android:layout_marginLeft="@dimen/qb_px_15"
        android:layout_marginStart="@dimen/qb_px_5"
        android:background="@drawable/shape_spinner_"
        android:layout_width="@dimen/qb_px_100"
        android:layout_height="wrap_content">



        <Spinner
            android:id="@+id/sp_reason"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:spinnerMode="dropdown"></Spinner>


    </LinearLayout>




    <LinearLayout
        android:id="@+id/ll_ui"
        android:layout_below="@+id/ll_ii"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_other"
            android:text="其他"
            android:textColor="@color/beauty_color_gray"
            android:layout_below="@+id/sp_zhuanbing"
            android:layout_marginTop="@dimen/qb_px_12"
            android:layout_marginStart="@dimen/qb_px_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </LinearLayout>






    <LinearLayout
        android:id="@+id/ed_inout"
        android:layout_below="@+id/ll_ui"
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_50"
        android:layout_marginStart="@dimen/qb_px_5"
        android:layout_marginTop="@dimen/qb_px_4"
        android:layout_marginEnd="@dimen/qb_px_5"
        android:background="@drawable/shape_bg_gray"
        android:orientation="vertical">


        <EditText
            android:id="@+id/ed_input"
            android:hint="输入其他理由"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/qb_px_5"
            android:background="@null"
            android:gravity="top"
            android:singleLine="false">

        </EditText>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_50"
        android:layout_below="@+id/ed_inout"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/btn_comfirm"
            android:layout_width="@dimen/qb_px_60"
            android:layout_height="34dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/shape_comfirm_sele"
            android:textColor="@drawable/unpress_select"
            android:gravity="center_horizontal"
            android:paddingHorizontal="@dimen/qb_px_8"
            android:paddingVertical="@dimen/qb_px_5"
            android:text="确认"
            android:textSize="15sp">

        </TextView>


        <TextView
            android:id="@+id/btn_cancel"
            android:layout_width="@dimen/qb_px_60"
            android:layout_height="34dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/qb_px_15"
            android:background="@drawable/shape_cancel_"
            android:gravity="center_horizontal"
            android:paddingHorizontal="@dimen/qb_px_8"
            android:paddingVertical="@dimen/qb_px_5"
            android:text="取消"
            android:textColor="#666666"
            android:textSize="15sp">

        </TextView>

    </LinearLayout>

</RelativeLayout>