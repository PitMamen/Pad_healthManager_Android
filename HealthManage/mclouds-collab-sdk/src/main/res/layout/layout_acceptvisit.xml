<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/qb_px_5">

    <LinearLayout
        android:layout_width="@dimen/qb_px_80"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/qb_px_12"
            android:layout_height="@dimen/qb_px_12"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_blsxl" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/qb_px_5"
            android:text="医生已接诊"
            android:textColor="@color/text_black"
            android:textSize="@dimen/qb_px_8"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/qb_px_8"
        android:orientation="horizontal">
        <TextView
            android:text="接诊医生:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_black"
            android:textSize="@dimen/qb_px_7"
            />
        <TextView
            android:id="@+id/tv_docname"
            android:layout_width="@dimen/qb_px_60"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/text_desc_dark"
            android:textSize="@dimen/qb_px_7" />

    </LinearLayout>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/qb_px_8"
        android:orientation="horizontal">
        <TextView
            android:text="接诊科室:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_black"
            android:textSize="@dimen/qb_px_7"
            />
        <TextView
            android:id="@+id/tv_docdeptname"
            android:layout_width="@dimen/qb_px_60"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/text_desc_dark"
            android:textSize="@dimen/qb_px_7" />

    </LinearLayout>







<!--    -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/qb_px_8"
        android:orientation="horizontal">
        <TextView
            android:text="时间:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_black"
            android:textSize="@dimen/qb_px_7"
            />
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text=""
            android:textColor="@color/text_desc_dark"
            android:textSize="@dimen/qb_px_7" />

    </LinearLayout>
