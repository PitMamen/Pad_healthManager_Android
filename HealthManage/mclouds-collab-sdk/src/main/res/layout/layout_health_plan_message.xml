<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/qb_px_5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/qb_px_10"
            android:layout_height="@dimen/qb_px_10"
            android:layout_marginTop="@dimen/qb_px_2"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_health_plan" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/qb_px_5"
            android:text="标题"
            android:textColor="@color/text_black"
            android:textSize="@dimen/qb_px_10"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/tv_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/qb_px_10"
            android:text="男"
            android:textColor="@color/text_desc_dark"
            android:textSize="@dimen/qb_px_8" />

        <View
            android:id="@+id/view_line"
            android:layout_width="@dimen/qb_px_1"
            android:layout_height="@dimen/qb_px_8"
            android:layout_marginLeft="@dimen/qb_px_5"
            android:layout_marginTop="@dimen/qb_px_3"
            android:background="@color/text_desc_dark" />

        <TextView
            android:id="@+id/tv_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/qb_px_5"
            android:text="30岁"
            android:textColor="@color/text_desc_dark" />


    </LinearLayout>

    <TextView
        android:id="@+id/tv_type"
        android:layout_width="@dimen/qb_px_80"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/qb_px_2"
        android:text="详情"
        android:textColor="@color/text_desc_dark"
        android:textSize="@dimen/qb_px_8" />

    <TextView
        android:id="@+id/tv_analyse"
        android:layout_width="@dimen/qb_px_80"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/qb_px_2"
        android:text="详情"
        android:textColor="@color/text_desc_dark"
        android:textSize="@dimen/qb_px_8" />

    <TextView
        android:id="@+id/tv_plan"
        android:layout_width="@dimen/qb_px_80"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/qb_px_2"
        android:text="详情"
        android:textColor="@color/text_desc_dark"
        android:textSize="@dimen/qb_px_8" />

</LinearLayout>