<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/qb_px_5">

    <LinearLayout
        android:layout_width="@dimen/qb_px_110"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/qb_px_10"
            android:layout_height="@dimen/qb_px_10"
            android:layout_marginTop="@dimen/qb_px_2"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_blsxl" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/qb_px_5"
            android:text="标题"
            android:textColor="@color/text_black"
            android:textSize="@dimen/qb_px_10"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/qb_px_110"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/qb_px_8"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/qb_px_5"
            android:text="初步诊断:"
            android:textColor="@color/text_black"
            android:textSize="@dimen/qb_px_8"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="@dimen/qb_px_80"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/qb_px_10"
            android:text="详情"
            android:textColor="@color/text_desc_dark"
            android:textSize="@dimen/qb_px_8" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/qb_px_110"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/qb_px_8"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/qb_px_5"
            android:text="处理意见:"
            android:textColor="@color/text_black"
            android:textSize="@dimen/qb_px_8"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_suggestion"
            android:layout_width="@dimen/qb_px_80"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/qb_px_10"
            android:text="详情"
            android:textColor="@color/text_desc_dark"
            android:textSize="@dimen/qb_px_8" />

    </LinearLayout>


</LinearLayout>