<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/qb_px_5">

    <LinearLayout
        android:layout_width="@dimen/qb_px_80"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/qb_px_12"
            android:layout_height="@dimen/qb_px_12"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_blsxl" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/qb_px_5"
            android:text="病情概述"
            android:textColor="@color/text_black"
            android:textSize="@dimen/qb_px_8"
            android:textStyle="bold" />

    </LinearLayout>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/qb_px_8"
        android:orientation="horizontal">
        <TextView
            android:text="描述:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_black"
            android:textSize="@dimen/qb_px_7"
            />
        <TextView
            android:id="@+id/tv_content"
            android:layout_width="@dimen/qb_px_60"
            android:layout_height="wrap_content"
            android:text="详情"
            android:textColor="@color/text_desc_dark"
            android:textSize="@dimen/qb_px_7" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/qb_px_8"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/qb_px_5"
            android:text="处理意见:"
            android:visibility="gone"
            android:textColor="@color/text_black"
            android:textSize="@dimen/qb_px_10"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_suggestion"
            android:layout_width="@dimen/qb_px_80"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/qb_px_10"
            android:text="详情"
            android:visibility="gone"
            android:textColor="@color/text_desc_dark"
            android:textSize="@dimen/qb_px_8" />

    </LinearLayout>


    <TextView
        android:id="@+id/tv_art_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/qb_px_15"
        android:layout_marginLeft="@dimen/qb_px_25"
        android:text="查看详情>>"
        android:textSize="12sp"
        android:textColor="@color/main_blue" />


</LinearLayout>